{
  "name": "lowlight-mermaid",
  "author": "Mayank Kumar Chaudhari (https://mayank-chaudhari.vercel.app)",
  "private": false,
  "version": "0.0.0",
  "description": "",
  "license": "MPL-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": "github:react18-tools/lowlight-mermaid",
  "bugs": "https://github.com/react18-tools/lowlight-mermaid/issues",
  "homepage": "https://github.com/react18-tools/lowlight-mermaid/#readme",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig-build.json && gzip -c dist/index.js | wc -c",
    "clean": "rm -rf dist",
    "dev": "tsup --watch && tsc -p tsconfig-build.json -w",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run --coverage"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.4.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild-plugin-rdi": "^0.0.0",
    "highlight.js": "^11.11.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/react18-tools"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/mayank1513"
    }
  ],
  "keywords": [
    "React",
    "React Loaders",
    "React 18",
    "React 19",
    "Next.js",
    "Next.js 14",
    "Next.js 15",
    "React server components",
    "Customizable",
    "Cutting-edge",
    "Compatibility",
    "Frontend development",
    "UI components",
    "Web development",
    "Progressive",
    "Modern",
    "Seamless integration"
  ]
}
