{
  "name": "turborepo-template",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,css,scss}\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "sync": "turborepo-template-upgrade",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "preinstall": "node scripts/update-pm.js"
  },
  "pre-commit": [
    "lint:fix",
    "format"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.9.1",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "turborepo-template-upgrade": "^0.8.0"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn@<6.0.6": ">=6.0.6",
      "next@>=15.0.0 <15.2.3": ">=15.2.3"
    }
  }
}